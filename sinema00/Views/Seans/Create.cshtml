                <label asp-for="FilmId" class="control-label"></label>
                <select id="film" asp-for="FilmId" class="form-control" asp-items="ViewBag.FilmId" onchange="loadSeanslar()"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalonId" class="control-label"></label>
                <select id="salon" asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId" onchange="loadSeanslar()"></select>
            </div>
            <div class="form-group">
                <label asp-for="SeansSaati" class="control-label"></label>
                <input id="seansSaati" asp-for="SeansSaati" class="form-control" />
                <span asp-validation-for="SeansSaati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
