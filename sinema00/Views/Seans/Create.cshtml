@model sinema00.Models.Sean

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sean</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SeansId" class="control-label"></label>
                <input asp-for="SeansId" class="form-control" />
