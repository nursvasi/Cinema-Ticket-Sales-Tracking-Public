@model IEnumerable<sinema00.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">

    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FilmAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yonetmen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotograf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FilmAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yonetmen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur)
            </td>
            <td>
                    <img src="@Url.Content(@item.Fotograf)" alt="Ürün görseli" height="150" width="100" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FilmId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FilmId" class="btn btn-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FilmId" class="btn btn-danger">Delete</a>
                </td>

        </tr>
}
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({

        });
    });
</script>