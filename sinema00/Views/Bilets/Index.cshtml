@model IEnumerable<sinema00.Models.Bilet>

@{
    ViewData["Title"] = "Index";
}

<h1>Tickets</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                Price
            </th>
            <th>
                Customer
            </th>
            <th>
                Session
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Musteri.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seans.SeansSaati)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BiletId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BiletId" class="btn btn-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BiletId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        var js = jQuery.noConflict(true);
        js(document).ready(function () {
            js('#tbllist').DataTable();
        });
    </script>
}
